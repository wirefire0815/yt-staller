{
    "manifest_version": 3,
    "name": "YT-Staller",
    "version": "1.0",
    "description": "Send video URLs to local yt-dlp script",
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "http://localhost:8080/"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/watch*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_title": "YT-Staller"
    }
}